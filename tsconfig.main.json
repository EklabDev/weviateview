{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src/main",
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "moduleResolution": "node",
    "types": ["node"]
  },
  "include": ["src/main/**/*"],
  "exclude": ["node_modules", "src/renderer"]
}
